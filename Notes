//javascript outputs php
<html>
    <body>
    <?php
        $text = "Hello World!";
    ?>
    <script type="text/javascript">
        document.write("<?php echo $text ?>");
    </script>
    <?php
    //....php code...
    ?>
    </body>
</html>

//PHP outputs javascript
echo <<<EOF
<script type="text/javascript">
    document.write("Hello World!");
</script>
EOF;

or 

$str = <<<MY_MARKER
<script type="text/javascript">
  document.write("Hello World!");
</script>
MY_MARKER;

echo $str;


